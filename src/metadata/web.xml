<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w2.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
 version="2.4">

   <filter>
    <filter-name>JAMonFilter</filter-name>
    <filter-class>com.jamonapi.JAMonFilter</filter-class>
   </filter>

   <filter-mapping>
    <filter-name>JAMonFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

<servlet>
  <servlet-name>Search</servlet-name>
  <servlet-class>org.jax.mgi.search.servlet.Search</servlet-class>
  <load-on-startup/>
</servlet>

<servlet-mapping>
  <servlet-name>Search</servlet-name>
  <url-pattern>/Search.do</url-pattern>
</servlet-mapping>

<context-param>
  <param-name>globalConfig</param-name>
  <param-value>/usr/local/mgi/live/mgiconfig/web/GlobalConfig</param-value>
</context-param>
<context-param>
  <param-name>teplateLoc</param-name>
  <param-value>/home/webster/searchTool/</param-value>
</context-param>

</web-app>

